<Window x:Class="BeetleGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeetleGame"
        mc:Ignorable="d"

        Title="ExtraoefeningH10" Height="650" Width="950">

    <Grid>

        <Label Content="Speed cm/s" HorizontalAlignment="Left" Height="24" Margin="37,68,0,0" VerticalAlignment="Top" Width="93"/>
        <Label Name="speedLabel" Content="0.5" HorizontalAlignment="Center" Height="24" Margin="0,68,0,0" VerticalAlignment="Top" Width="44"/>
        <Label Content="Size in pixels" HorizontalAlignment="Left" Margin="37,146,0,0" VerticalAlignment="Top"/>

        <Label Content="10" HorizontalAlignment="Left" 
               Name="sizeLabel" Margin="461,146,0,0" VerticalAlignment="Top"/>
        <Canvas HorizontalAlignment="Left" Height="356" 
                Name ="paperCanvas" Background ="LightGray" Margin="47,218,0,0" VerticalAlignment="Top" Width="536"/>


        <Label Name="messageLabel" Content="" HorizontalAlignment="Left" Height="61" Margin="616,513,0,0" VerticalAlignment="Top" Width="218"/>
        <Button Name="startButton" Content="Start" HorizontalAlignment="Left" Margin="775,76,0,0" VerticalAlignment="Top" Width="59" Click="startButton_Click"/>
        <Button Name="resetButton" Content="Reset" HorizontalAlignment="Left" Margin="775,123,0,0" VerticalAlignment="Top" Width="59" Click="resetButton_Click"/>
        <Button Name="upButton" Content="Up" HorizontalAlignment="Left" Margin="775,218,0,0" VerticalAlignment="Top" Width="59" Click="upButton_Click"/>
        <Button Name="downButton" Content="Down" HorizontalAlignment="Left" Margin="775,342,0,0" VerticalAlignment="Top" Width="59" Click="downButton_Click"/>
        <Button Name="leftButton" Content="Left" HorizontalAlignment="Left" Margin="685,276,0,0" VerticalAlignment="Top" Width="57" Click="leftButton_Click"/>
        <Button Name="rightButton" Content="Right" HorizontalAlignment="Left" Margin="863,276,0,0" VerticalAlignment="Top" Width="57" Click="rightButton_Click"/>
        <Slider Name="speedSlider" HorizontalAlignment="Left" Margin="135,71,0,0" VerticalAlignment="Top" Width="310" Minimum="0.5" Maximum="10" ValueChanged="speedSlider_ValueChanged" TickFrequency="2" IsSnapToTickEnabled="True"/>
        <Slider Name="sizeSlider" HorizontalAlignment="Left" Margin="135,151,0,0" VerticalAlignment="Top" Width="310" Minimum="10" Maximum="20" ValueChanged="sizeSlider_ValueChanged" TickFrequency="2" IsSnapToTickEnabled="True"/>


    </Grid>
</Window>
